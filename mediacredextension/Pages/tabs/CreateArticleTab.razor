@using MediaCred;
@using Newtonsoft.Json;
@inject IApiData _apiData
<MudStack>
    <MudTextField @bind-Value="title" T="string" Label="Title"></MudTextField>
    <MudTextField T="string" Label="GroundFact"></MudTextField>
    <MudTextField T="string" Label="Publisher"></MudTextField>
    <MudTextField T="string" Label="Link"></MudTextField>
    <MudTextField T="string" Label="Created Date"></MudTextField>
    <MudTextField T="string" Label="Conclusion"></MudTextField>
    <MudIconButton OnClick="async ()=> await CreateArticle()" Icon="@Icons.Filled.Add"></MudIconButton>
</MudStack>

@code {
    private string title;
    private string groundFact;
    private string publisher;
    private string createdDate;
    private async Task CreateArticle()
    {
        var article = new Article() {Title = title };
       await _apiData.CreateArticle(article);
        
    }
}
